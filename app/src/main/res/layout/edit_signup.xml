<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/toolbar">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:background="@drawable/back"
            android:onClick="backToActivity"
            android:id="@+id/imageView8"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView8"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/imageView8"
            android:layout_toRightOf="@+id/imageView8"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottombar"
        android:layout_below="@+id/toolbar">


        <RelativeLayout
            android:id="@+id/above_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="11dp">


            <EditText
                android:id="@+id/edt_name"
                android:layout_width="290dp"

                android:layout_height="40dp"

                android:paddingLeft="40dp"


                android:background="@drawable/rounded_rectangle_login"
                android:hint="Full Name"

                android:textColor="@android:color/holo_blue_bright"
                android:textColorHint="#000000"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="290dp"

                android:layout_height="40dp"

                android:layout_below="@+id/edt_name"

                android:layout_marginTop="10dp"

                android:background="@drawable/rounded_rectangle_login"
                android:hint="Enter Email"
                android:paddingLeft="40dp"
                android:textColor="@android:color/holo_blue_bright"
                android:textColorHint="#000000"
                android:textSize="15dp" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottombar"
        android:id="@+id/main_layout"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/edt_password"
            android:layout_width="290dp"
            android:layout_height="40dp"
           android:layout_marginLeft="40dp"


            android:background="@drawable/rounded_rectangle_login"
            android:paddingLeft="30dp"
            android:hint="Password"

            android:textSize="15dp"
            android:textColorHint="#000000"
            android:textColor="@android:color/holo_blue_bright"/>
        <EditText
            android:id="@+id/edt_country"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"

            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_rectangle_login"
            android:paddingLeft="30dp"
            android:hint="Country"
            android:layout_below="@+id/edt_password"

            android:textSize="15dp"
            android:textColorHint="#000000"
            android:textColor="@android:color/holo_blue_bright"/>
        <RelativeLayout
            android:layout_width="290dp"
            android:layout_height="55dp"
            android:layout_below="@+id/edt_country"
        android:id="@+id/gender_layout"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="40dp">

            <EditText
                android:id="@+id/edt_age"
                android:layout_width="140dp"
                android:layout_height="40dp"

                android:layout_alignParentTop="true"

                android:background="@drawable/rounded_rectangle_login"
                android:paddingLeft="30dp"
                android:hint="Age"
                android:textSize="15dp"
                android:textColorHint="#000000"
                android:textColor="@android:color/holo_blue_bright"/>

            <EditText
                android:id="@+id/edt_gender"
                android:layout_width="140dp"
                android:layout_height="40dp"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/rounded_rectangle_login"
                android:paddingLeft="30dp"
                android:hint="Gender"
                android:inputType="none"
                android:textSize="15dp"
                android:textColorHint="#000000"
                android:textColor="@android:color/holo_blue_bright"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender_layout">

            <EditText
                android:id="@+id/edt_status"
                android:layout_width="300dp"
                android:layout_height="100dp"

                android:layout_alignParentTop="true"

                android:layout_centerHorizontal="true"
                android:background="@drawable/rectangle_status"
              android:hint="Enter Status"
                android:gravity="start"

                android:textColor="@android:color/holo_blue_bright"
                android:textColorHint="#000000"
                android:textSize="15dp" />
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_layout"
        >
        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@+id/relativeLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:id="@+id/signup_btn"
            android:text="Sign Up"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:onClick="UploadSignUpData"
            android:background="@drawable/signup_btn_design"/>

    </RelativeLayout>

    </RelativeLayout>


