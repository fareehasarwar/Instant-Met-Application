<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        app:popupTheme="@style/AppTheme.PopupOverlay" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:onClick="backButton">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"

                android:src="@drawable/back" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="73dp"
                android:layout_marginRight="73dp"
                android:layout_toLeftOf="@+id/relativeLayout5"
                android:layout_toStartOf="@+id/relativeLayout5">

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"

                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/relativeLayout5">

                <ImageView
                    android:id="@+id/imageview_coin"
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/textView3"
                    android:layout_toStartOf="@+id/textView3"
                    android:src="@drawable/coin_icon" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:text="47.1K"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:src="@mipmap/item_seperator" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@id/imageView3"
        android:id="@+id/relativeLayout3"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_img_1"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:background="#ffffff"
            app:civ_border_width="3dp"


            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:id="@+id/text_layout"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="120dp"
        >


        <LinearLayout
            android:id="@+id/linerlayout"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <!--Number of likes!-->
            <LinearLayout
                android:id="@+id/post_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/num_of_posts"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"

                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="Post"
                    android:textColor="#000000"
                    android:textSize="12dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/num_of_likes"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="Fans"
                    android:textColor="#000000"
                    android:textSize="12dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/follow_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/num_of_followers"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:gravity="center"

                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="Following"
                    android:textColor="#000000"
                    android:textSize="12dp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="35dp"

android:id="@+id/follow_btn"
        android:layout_marginTop="120dp"
        android:background="@drawable/rounded_react"

        android:layout_marginLeft="110dp"
        android:layout_marginRight="5dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/following_txt"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Follow"
            android:textSize="15dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ticmark_img"
            android:layout_alignTop="@+id/following_txt"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/following_txt"
            android:layout_toRightOf="@+id/following_txt"
            android:background="@drawable/ticmark"
            android:visibility="invisible"/>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_status"
android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/relativeLayout3"
        android:textColor="#000000"

        />
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"


        android:layout_height="2dp"
        android:layout_below="@+id/text_status"
        android:src="@mipmap/item_seperator" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_profile"
        android:layout_below="@id/image"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff"
        />
</RelativeLayout>






