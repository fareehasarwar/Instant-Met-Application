<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dss">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:src="@mipmap/login"
        />
    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="250dp"
        android:layout_height="60dp"
  android:visibility="invisible"
        android:layout_marginTop="260dp"
       android:layout_marginLeft="60dp"
        android:onClick="LoginWithFacebook"


        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView5">

        <Button
            android:id="@+id/button3"
            android:layout_width="147dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/half_round_react"
            android:text="Sign in"
            android:textSize="18dp"
            android:onClick="loginWith"
            android:textStyle="bold" />

        <Button
            android:layout_width="155dp"
            android:layout_height="45dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/button3"
            android:layout_toRightOf="@+id/button3"
            android:background="@drawable/half_round"
            android:text="Sigin up"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:onClick="signup"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="270dp"
        android:layout_height="200dp"
        android:src="@mipmap/selfee"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />


</RelativeLayout>